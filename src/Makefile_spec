CLOCAL          = -DDEBUG_ASCENDING_CHAINS_COSETS

CFLAGS 		= -I$(GMP_INCDIR) -I$(BOOST_INCDIR)

LIBS		= -lm $(GMP_CXX_LINK) -pthread

%.o: %.cpp
	@echo
	@echo compile $<
	$(CC) $(OUTPUTFLAG) $@ $(CLOCAL) $(CFLAGS) $(NOLINKFLAG) $<

all:	$(PROGRAM)

$(PROGRAM): 	$(OBJECTS)
		@echo
		@echo link $@
		$(CC) $(DEBUGFLAG) $@.o $(LIBS) -o $@

clean:;
	rm -f *.o
	rm -f $(PROGRAM)
